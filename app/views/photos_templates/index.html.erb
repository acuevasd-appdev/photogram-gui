<h1>List of photos</h1>


<form action="/add_photo">
<div>
  <label for="new_image">Image</label>
  <input id="new_image" type="text" placeholder="Enter a URL for the image..." name="input_new_image">

  <label for="new_caption">Caption</label>
  <textarea id="new_caption" placeholder="Enter a caption for the photo..." name="input_new_caption"></textarea>

  <label for="new_owner">Owner ID</label>
  <input id="new_owner" type="text" placeholder="Enter an ID of a User..." name="input_owner">

<button>Add photo</button></div>
</form>

<hr>

<table border="1"> 
  <tr>
    <th>Image</th>
    <th>Owner</th>
    <th>Caption</th>
    <th>Posted</th>
    <th></th>
  </tr>

  <%  @list_of_photos.each do |this_photo|%>
    <tr>
    <td> <img src="<%= this_photo.image%>" style ="width:250px;"></td> 
    <td> <%= this_photo.poster.username %> </td>
    <td> <%= this_photo.caption %> </td> 
    <td> <%= this_photo.created_at %> </td>
    <td><a href="/photos/<%=this_photo.id %>">Show details</a></td>
  </tr>
  <% end %>

</table>
